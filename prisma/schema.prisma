generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum LoginMethod {
  GOOGLE
  GITHUB
  PASSWORD_LESS
}

model Login {
  id        String      @id @default(auto()) @map("_id") @db.ObjectId
  method    LoginMethod
  userId    String      @db.ObjectId
  imageUrl  String?
  data      Json?
  user      User        @relation(fields: [userId], references: [id])
  createdAt DateTime?   @default(now())
  updatedAt DateTime?   @updatedAt
}

model User {
  id        String    @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  email     String?
  loginAt   DateTime?
  logins    Login[]
  createdAt DateTime? @default(now())
  updatedAt DateTime? @updatedAt
}

model OneTimeAccessToken {
  id        String    @id @default(auto()) @map("_id") @db.ObjectId
  token     String    @unique
  email     String
  username  String?
  createdAt DateTime? @default(now())
  updatedAt DateTime? @updatedAt
}
