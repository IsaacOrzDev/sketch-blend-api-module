generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum LoginMethod {
  GOOGLE
  GITHUB
  PASSWORD_LESS
}

model Login {
  id        String      @id @default(auto()) @map("_id") @db.ObjectId
  method    LoginMethod
  userId    String      @db.ObjectId
  imageUrl  String?
  data      Json?
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
  user      User        @relation(fields: [userId], references: [id])

  @@map("logins") // Specify the collection name as "logins"
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  email     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  logins    Login[]
}
